<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/rabbit
    http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd
    http://www.springframework.org/schema/context
    https://www.springframework.org/schema/context/spring-context.xsd">
    <description>Spring-RabbitMQ</description>

    <context:property-placeholder location="properties/rabbitmq-config.properties"/>

    <!-- 1、连接配置 -->
    <rabbit:connection-factory
            id="rabbitmqConnectFactory"
            host=""
            username=""
            password=""
            port=""
            virtual-host=""/>

    <!-- 2、配置队列 -->
    <!--
        durable:是否持久化
        auto_delete: 当所有消费客户端连接断开后，是否自动删除队列
        exclusive: 仅创建者可以使用的私有队列，断开后自动删除
    -->
    <rabbit:queue id="globalsource" name="globalsource" auto-delete="false" durable="true" exclusive="false"/>

    <!-- 3、配置rabbitAdmin -->
    <rabbit:admin connection-factory="rabbitmqConnectFactory"/>

    <!-- 4. 配置topic类型exchange；队列绑定到交换机 -->
    <!--
    rabbit:direct-exchange：定义exchange模式为direct，意思就是消息与一个特定的路由键完全匹配，才会转发。
    rabbit:binding：设置消息queue匹配的key

    rabbit:topic-exchange：定义exchange模式为topic，多播模式，会根据pattern进行路由键的模糊匹配
-->
    <rabbit:topic-exchange name="globalsource:topic">
        <rabbit:bindings>
            <rabbit:binding queue="globalsource" pattern="globalsource.#"/>
        </rabbit:bindings>
    </rabbit:topic-exchange>

    <!-- 5. 配置消息对象json转换类 -->
    <bean id="jsonMessageConverter" class="org.springframework.amqp.support.converter.Jackson2JsonMessageConverter"/>

    <!-- 6. 配置RabbitTemplate -->
    <rabbit:template exchange="globalsource:topic" id="rabbitTemplate" connection-factory="rabbitmqConnectFactory"
                     message-converter="jsonMessageConverter"/>


    <!-- 监听配置 -->
<!--    <rabbit:listener-container connection-factory="connectFactory" acknowledge="auto">-->
<!--        <rabbit:listener ref="rabbitQueueListener" queues="test_queue_key"/>-->
<!--    </rabbit:listener-container>-->
</beans>
